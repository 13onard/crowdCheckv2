<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/blue"
    app:cardCornerRadius="16dp"
    app:cardElevation="15dp"
    app:contentPadding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/SeatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/interreg"
            android:text="Seats"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ScannerTitle"
            app:layout_constraintTop_toBottomOf="@+id/ScannerImg" />

        <TextView
            android:id="@+id/OPACTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/interreg"
            android:text="OPAC (Online Public Access Catalogue)"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scannedID" />

        <TextView
            android:id="@+id/OPACInfo"
            android:layout_width="264dp"
            android:layout_height="39dp"
            android:fontFamily="@font/interreg"
            android:text="Electronic database for books, journals, multimedias, etc. available for students"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/OPACImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/OPACImg"
            app:layout_constraintTop_toTopOf="@+id/OPACImg" />

        <TextView
            android:id="@+id/ScannerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/interreg"
            android:text="Scanner"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/OPACTitle"
            app:layout_constraintTop_toBottomOf="@+id/OPACImg" />

        <TextView
            android:id="@+id/SeatsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interreg"
            android:text="The seats available for students."
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/SeatsImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SeatsImg"
            app:layout_constraintTop_toBottomOf="@+id/SeatsTitle" />

        <ImageView
            android:id="@+id/SeatsImg"
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/SeatsTitle"
            app:layout_constraintTop_toBottomOf="@+id/SeatsTitle"
            app:srcCompat="@drawable/ichair" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:tint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scannedID"
            app:srcCompat="@drawable/icons8_information_96" />

        <TextView
            android:id="@+id/ScannerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interreg"
            android:text="The QR Scanners for Entries and Exit."
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/ScannerImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ScannerImg"
            app:layout_constraintTop_toTopOf="@+id/ScannerImg" />

        <ImageView
            android:id="@+id/ScannerImg"
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/ScannerTitle"
            app:layout_constraintTop_toBottomOf="@+id/ScannerTitle"
            app:srcCompat="@drawable/iqr" />

        <TextView
            android:id="@+id/scannedID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/interbold"
            android:text="Library Information"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/OPACTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.85">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/infoClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/interbold"
                android:padding="5dp"
                android:shadowColor="#C8A7A7"
                android:text="Close"
                android:textColor="@color/black"
                android:textColorHighlight="#3F51B5"
                android:textColorLink="#03A9F4"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                app:strokeColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/OPACImg"
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/OPACTitle"
            app:layout_constraintTop_toBottomOf="@+id/OPACTitle"
            app:srcCompat="@drawable/iopac" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>